/* login.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.login-title {
  font-size: 24px;
  margin-bottom: 20px;
}

.input {
  width: 80%;
  margin: 10px 0;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.login-button {
  width: 80%;
  padding: 10px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 5px;
  text-align: center;
  margin-top: 20px;
}
